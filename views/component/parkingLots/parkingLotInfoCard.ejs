<style>
    .add-btn {
        font-size: 12px;
        text-align: center;
    }
</style>

<!-- Parking lot info card -->
<div class="row">
    <div class="col s12 offset-s2">
        <div class="card">
            <div class="card-content">
                <form class="container" action="/parking_lot" method="POST">
                    <div class="row">
                        <div class="col s8 pull-s1"><h6>Parking Lot Information</h6></div>
                        <div class="col s4 push-s2"><a class="add-btn">Submit</a></div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="lot-name" placeholder="Parking Lot Name" type="text" class="validate">
                        </div>
                        <div class="input-field col s6">
                            <input id="last-name" placeholder="Last Name" type="text" class="validate">
                        </div>
                        <div class="input-field col s12">
                            <input id="address" placeholder="Address" type="text" class="validate">
                        </div>
                        <div class="input-field col s3">
                            <input id="city" placeholder="City" type="text" class="validate">
                        </div>
                        <div class="input-field col s3">
                            <input id="state" placeholder="State" type="text" class="validate">
                        </div>
                        <div class="input-field col s3">
                            <input id="zip" placeholder="Zip" type="text" class="validate">
                        </div>
                        <div class="input-field col s3">
                            <input id="price" placeholder="Price/Hr (default)" type="text" class="validate">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s8 pull-s1"><h6>Administrator Account</h6></div>
                        <div class="col s4 push-s1"><a  href="/parking/new" class="add-btn">+Add another Account</a></div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="admin-account" placeholder="Search By Account" type="search" class="validate">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s8 pull-s1"><h6>Parking Structure Orientation</h6></div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="total-spots" placeholder="Total number of Spots" type="text" class="validate">
                        </div>
                        <div class="input-field col s6">
                            <input id="num-levels" placeholder="Total number of levels" type="text" class="validate">
                        </div>
                        <div class="input-field col s6 offset-s6 pull-s6">
                            <span><h6>Level 1:</h6></span>
                            <input id="num-spots" placeholder="Number of spots" type="text" class="validate">
                        </div>
                        <div class="input-field col s6 offset-s6 pull-s6">
                            <span><h6>Level 2:</h6></span>
                            <input id="num-spots" placeholder="Number of spots" type="text" class="validate">
                        </div>
                        <div class="input-field col s6 offset-s6 pull-s6">
                            <span><h6>Level 3:</h6></span>
                            <input id="num-spots" placeholder="Number of spots" type="text" class="validate">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


