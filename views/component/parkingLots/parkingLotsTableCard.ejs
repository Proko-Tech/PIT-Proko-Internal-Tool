<div class="container" style="width: 100%;">
    <div class="row">
        <div class="col s12 offset-s2">
            <div class="card">
                <div class="card-content">
                    <center>
                        <h4 class="card-title">
                            Parking Lots Directory
                        </h4>
                    </center>
                </div>
                <div class="container" style="width: 90%;">
                    <table id="lotsTable" class="DataTable" style="width: 100%">
                        <colgroup>
                            <col style="width: 5%">
                            <col style="width: 20%">
                            <col style="width: 40%">
                            <col style="width: 15%">
                            <col style="width: 15%">
                            <col style="width: 10%">
                        </colgroup>
                        <thead>
                            <tr>
                                <th>Lot ID</th>
                                <th>Lot Hash</th>
                                <th>Parking Lot</th>
                                <th>Created At</th>
                                <th>Last Updated</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <form method="POST">
                                <%lotsInfo.map(function(lot){%>
                                    <tr class="clickable-row" data-href = "/parking/lotID?lotId=<%=lot.id%>">
                                        <td>
                                            <input value='<%=lot.id%>'>
                                            <div style="visibility: hidden;">
                                                <%=lot.id%>
                                            </div>
                                        </td>
                                        <td>
                                            <input value='<%=lot.hash%>'>
                                            <div style="visibility: hidden;">
                                                <%=lot.hash%>
                                            </div>
                                        </td>
                                        <td>
                                            <input value='<%=lot.name%>'>
                                            <div style="visibility: hidden;">
                                                <%=lot.name%>
                                            </div>
                                        </td>
                                        <td>
                                            <%=lot.created_at%>
                                        </td>
                                        <td>
                                            <%=lot.updated_at%>
                                        </td>
                                        <td>
                                            <a class = "waves-effect waves-light btn-small" href = "/parking/lotID?lotId=<%=lot.id%>">Details</a>
                                        </td>
                                    </tr>
                                    <%});%>
                            </form>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- External style sheet -->
<link href="/stylesheets/parkingLotsTableCard.css" rel="stylesheet" type="text/css"/>