<!-- close ticket info card -->
<div class="row">
    <div class="col s12 ">
        <div class="card">
            <div class="card-content">
                <form class="container" action="/ticket_detail" method="POST">
                    <div class="row">
                        <div class="col s8 pull-s2"><h6>Close Ticket</h6></div>
                        <div class="col s4 push-s5"><a>Close</a></div>
                        <div class="col s8 pull-s2"><p>Time</p></div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="fix" placeholder="Briefly describe the fix" type="text" class="closeTicket">
                        </div>
                        <div class="input-field col s12">
                            <input id="reason" placeholder="Briefly describe the reason of malfunction" type="text" class="closeTicket">
                        </div>
                        <div class="input-field col s12">
                            <input id="comments" placeholder="Additional Comments" type="text" class="closeTicket">
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

