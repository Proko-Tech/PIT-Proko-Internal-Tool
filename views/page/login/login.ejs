<!DOCTYPE html>
<html>

<head>
    <link href="/stylesheets/login_style.css" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <title> ProkoPark Internal Login </title>


</head>

<body>
    <div class="centered">
        <h3 class="blue-text darken-1" style="font-size: 30px">ProkoPark Internal Login</h3>
        <div class="card">
            <div class="card-content">
                <form method="post" action="/">
                    <input type="hidden" name="tzOffset" id="tzOffset">
                    <p>
                        <label>Username:</label>
                        <input type="text" placeholder="Enter Username" name="username">
                    </p>
                    <p>
                        <label>Password:</label>
                        <input type="password" placeholder="Enter Password" name="password">
                    </p>
                    <center>
                        <p>
                            <button class="btn btn-small blue darken-1" type="submit" value="login" >Submit</button>
                        </p>
                    </center>
                </form>
            </div>
        </div>
    </div>
    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="js/materialize.min.js"></script>
    <script>
        var tzOffset = new Date().getTimezoneOffset(),
            tzInput = document.getElementById('tzOffset');
        tzInput.value = tzOffset*(-1);
    </script>
</body>

</html>
